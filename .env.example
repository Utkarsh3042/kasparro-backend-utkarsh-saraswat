# Database Configuration
DATABASE_URL=postgresql://crypto_user:crypto_password@postgres:5432/crypto_etl
# For local SQLite: DATABASE_URL=sqlite:///./data/crypto_data.db

POSTGRES_USER=crypto_user
POSTGRES_PASSWORD=crypto_password
POSTGRES_DB=crypto_etl
POSTGRES_PORT=5432

# API Configuration
COINGECKO_API_URL=https://api.coingecko.com/api/v3
COINPAPRIKA_API_URL=https://api.coinpaprika.com/v1
COINPAPRIKA_API_KEY=

# Auto-Ingestion
AUTO_INGEST_ON_STARTUP=true
AUTO_INGEST_SOURCES=csv,coingecko,coinpaprika

# Rate Limiting (calls per minute)
COINGECKO_MAX_CALLS_PER_MINUTE=50
COINPAPRIKA_MAX_CALLS_PER_MINUTE=25

# Retry Configuration
MAX_RETRIES=3
BASE_RETRY_DELAY=2.0
MAX_RETRY_DELAY=60.0

# Circuit Breaker
CIRCUIT_BREAKER_THRESHOLD=5
CIRCUIT_BREAKER_TIMEOUT=60

# Logging
LOG_LEVEL=INFO

# Application
APP_PORT=8000

# PgAdmin (Optional)
PGADMIN_EMAIL=admin@crypto-etl.com
PGADMIN_PASSWORD=admin
PGADMIN_PORT=5050